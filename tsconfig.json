{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["DOM", "ES2017", "ES2020.Promise"],
		"rootDir": "./src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": false,
		"outDir": "./dist",
		"sourceMap": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*.ts"
	]
}
